@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}
<form asp-action="Login" method="post" class="w-25 mt-4 mx-auto p-4 shadow">
    <div class="form-group">
        <label asp-for="UserName" ></label>
        <span asp-validation-for=UserName class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" ></label>
        <span asp-validation-for=Password class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-label" />
        <label asp-for="RememberMe" class="form-check-label">Husk mig</label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger" >

    </div>
    <a asp-action="CreateAccount" class="btn btn-warning btn-sm">Opret medarbejder</a>
    <input type="submit"  class="btn btn-info btn-sm" value="Login" />
 
    
</form>