@model AppUserAddDto
@{
    ViewData["Title"] = "KayitOl";
    Layout = "~/Views/shared/_StandartLayout.cshtml";
}

<form asp-action="CreateAccount" method="post" class="mt-4 w-75 mx-auto p-3 shadow">
    <h4 class="text-center">Opret medarbejder</h4>
    <div class="form-group">
        <label asp-for="@Model.Name">Navn</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName">Efternavn</label>
        <span asp-validation-for="@Model.SurName" class="text-danger"></span>
        <input asp-for="@Model.SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email">E-mail</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password">Kodeord</label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword">Gentag kodeord</label>
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserName">Brugernavn</label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <a asp-action="Index" class="btn btn-warning p-3" btn-sm>Tilbage</a>
    <button type="submit" class="btn btn-info btn-sm p-3">Opret bruger</button>
</form>
