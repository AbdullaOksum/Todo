@model List<NotificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/shared/_AdminLayout.cshtml";
}

@if (@Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <div class="alert alert-light p-3 my-2">
            

            <form method="post" asp-action="Index" class="my-1">
                <p class="lead">
                    <input type="hidden" name="id" value="@item.Id">
                    @item.Explanation
                    <button type="submit" class="btn btn-light btn-sm float-end">Læst</button>
                </p>
            </form>
        </div>

    }

}
else
{
    <div class="alert alert-light p-3 my-2">
        <p clas="lead">
            Du har ingen ulæste beskeder.
        </p>
    </div>

}


