@model List<UrgencyListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/shared/_AdminLayout.cshtml";
}



@if (Model.Count != 0)
{
    <a asp-action="CreateUrgency" asp-controller="Urgency" class="btn btn-sm btn-outline-dark my-2">  <i class="fas fa-plus-circle mr-2"></i>
Opret prioritet</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Definition</th>
                <th>Behandle</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Definition</td>
                    <td>
                        <a asp-action="UpdateUrgency" asp-controller="Urgency" 
                        asp-route-id="@item.Id" 
                        class="btn btn-warning btn-sm">
                        <i class="fas fa-edit mr-2"></i>
                        Redigere</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="text-center  mt4">
        <p class="lead"> Der findes ingen priotitets tilstand.</p>
        <a asp-action="CreateUrgency" asp-controller="Urgency" class="btn btn-sm btn-info my-2">>Opret ny prioritets tilstand</a>
    </div>
}