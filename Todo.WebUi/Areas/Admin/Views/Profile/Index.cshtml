@model AppUserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/shared/_AdminLayout.cshtml";
}
@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
  @TempData["message"]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.Name">Navn: </label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName">Efternavn: </label>
        <span asp-validation-for="SurName" class="text-danger"></span>
        <input asp-for="@Model.SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email">Email: </label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <div class="row">
                <div class="col-md-2">

               </div>
            <div class="col-md-4">
                <div >
                     <h5 class="text-center">Nuværende billede</h5>
                <img src="~/img/@Model.Picture"  style="height:10rem!important;"
                     alt="@Model.Name" />
                </div>
           

            </div>
            <div class="col-md-4">
                <div id="Prev" style="display:none!important;">
                <h5 class="text-center">Valg billede.</h5>
               <img id="PicPrev" src="" class="w-100"  
               style="height:10rem!important;" />
                </div>
            </div>
            <div class="col-md-2">

               </div>

            <div class="col-md-12">
                <label>Valg billede:</label>
                <input type="file" class="form-control-file" name="picture" id="Picture" />

            </div>


        </div>
    </div>
  
        <button type="submit" class="btn btn-info btn-sm mt-2">
        <i class="fas btn-check mr-2"></i>
        Gem
    </button>

   
</form>


@section JavaScript{

<script type="text/javascript">
    $(document).ready(function () {
        $("#Picture").change(function (e) {
            
            $("#Prev").show();
            $("#PicPrev").attr('src', URL.createObjectURL(e.target.files[0]));
        });
    });
</script>
}